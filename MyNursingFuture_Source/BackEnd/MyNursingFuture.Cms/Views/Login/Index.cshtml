@model MyNursingFuture.Cms.Models.LoginViewModel
@{
    ViewBag.Title = "My Nursing Future";
}

@CustomHelpers.SuccessMessage(TempData)

@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-3">Username</div>
        <div class="col-sm-3">
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Username)
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-3">Password</div>

        <div class="col-sm-3">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Password)
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-3">Remember me</div>

        <div class="col-sm-3">
            @Html.CheckBoxFor(x => x.Remember, new { @class = "" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-sm-3 col-sm-offset-5">
            <input type="submit" value="Login" class="btn btn-primary pull-right" />
        </div>
    </div>

}


