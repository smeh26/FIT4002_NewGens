<div class="modal fade" id="videos-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:800px;">
        <div class="modal-content" style="padding:5px">
            <!-- Youtube -->
            <div class="col-md-12 block-one">
                <div class="panel-heading panel-social">
                    <div class="title-yt col-md-12 col-xs-12 panel-title">
                        <h2>Youtube APNA Videos</h2>
                    </div>
                </div>

                <div class="panel-collapse collapse productlist collapse in" id="collapse1">
                   
                        <div class="row">
                            <div class="col-xs-3"><label>Channel playlists:</label></div>
                            <div class="col-xs-5"><select class="form-control" id="channel-lists"></select></div>
                            <div class="col-xs-4"><button class="btn" onclick="selectVideo();">Select current video</button></div>
                        </div>
                       <br />
                        <div class="row" style="margin: 0">
                            <div class="col-xs-12">
                                <div id="video-container" class="hs-responsive-embed-youtube"></div>
                            </div>
                        </div>
                    <div class="row">
                        <div class=" col-lg-12 col-md-11 col-sm-11 col-xs-12 block-two">
                            <div id="Carousel" class="carousel slide carousel-videos">
                                <div class="carousel-inner" id="carousel-inner-videos"></div>
                                <a class="left carousel-control" href="#Carousel" role="button" data-slide="prev" style="position: absolute; left: -75px;">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#Carousel" role="button" data-slide="next" style="position: absolute; right: -45px;">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>

                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>

<!--Mustache Template-->
<script id="slide-div" type="text/html">
    {{#Slide}}
    <div class="col-xs-6 col-md-3 col-lg-3 col-sm-3 box-others-video">
        <div style="width:100%; text-align:center;">
            <img class="thumbnails-videos" style="width:100%!important;  cursor: pointer;" src="{{url}}" alt="{{title}}" onclick="changeVideo('{{videoId}}')" />
            <p style="text-align:left; width:100%; padding: 10px; float:left; padding-left:10px; padding-bottom:0px;" class="title-other-videos">{{title}}</p>
        </div>
    </div>
    {{/Slide}}
</script>